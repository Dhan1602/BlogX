<style>
    * {
        transition: all 0.1s ease 0s;
        font-family: Roboto, sans-serif;
    }

    body {
        margin: 0;
        padding: 0;
        margin-top: 6vw;
        margin-bottom: 5vw;
        background-color: rgb(80, 78, 78);
    }

    header {
        background: rgb(242, 242, 242);
        padding-top: 25px;
        height: 3vw;
        width: 100%;
        font-size: 20px;
        position: fixed;
        top: 0;
        margin-bottom: 10px;
        z-index: 3;
        user-select: none;
    }

    #logo,
    #secciones {
        display: inline;

    }

    #logo {
        margin-left: 6vw;
    }

    #secciones {
        float: right;
        margin-right: 6vw;
        margin-left: auto;
    }

    a {
        color: black;
        text-decoration: none;
        margin-right: 43px;
    }

    .aSelected {
        color: rgb(255, 98, 0);
        cursor: default;
    }

    #aCrear:hover {
        color: rgb(255, 98, 0);
    }

    footer {
        background: rgb(6, 3, 48);
        padding: 25px 0 15px 0;
        height: 1vw;
        width: 100%;
        font-size: 20px;
        position: fixed;
        bottom: 0;
        color: white;
        text-align: center;
        font-size: 16px;
        cursor: default;
        user-select: none;
    }

    #cardsparent {
        display: grid;
        grid-template-columns: repeat(4, 400px);
        grid-auto-rows: 400px;
        gap: 20px;
        margin: 0 10px auto;
        cursor: default;
    }

    .cardsChildren {
        position: relative;
        background: rgba(0, 0, 0, 0.5) url("https://librosostenibilidad.files.wordpress.com/2017/03/paisaje-cultura-sostenibilidad.jpg?w=2000&h=1365&crop=1");
        background-repeat: no-repeat;
        width: 400px;
        background-size: cover;
        background-blend-mode: darken;
        color: white;
        border-radius: 20px;
        border: white solid 7px;
        box-sizing: border-box;
    }

    .verMas {
        color: rgb(255, 98, 0);
        cursor: pointer;
    }

    .cardContent {
        position: absolute;
        bottom: 20px;
        left: 20px;
        font-size: 25px;
    }

    /* RESPONSIVE */

    @media screen and (max-width: 1400px) {
        #cardsparent {
            grid-template-columns: repeat(3, auto);
            margin-left: 15px;
        }

        body {
            margin-top: 8vw;
            margin-bottom: 7vw;
        }
    }

    @media screen and (max-width: 950px) {
        #cardsparent {
            grid-template-columns: repeat(2, auto);
        }
        header{
            padding-bottom: 2vw;
        }

        body {
            margin-top: 10vw;
            margin-bottom: 9vw;
        }
    }

    @media screen and (max-width: 600px) {
        header{
            padding-bottom: 3vw;
        }
        body {
            margin-top: 12vw;
            margin-bottom: 12vw;
        }
        footer{
            font-size: 15px;
        }
    }
</style>